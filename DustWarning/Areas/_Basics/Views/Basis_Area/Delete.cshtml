@model DustWarning.ViewModel._Basics.Basis_AreaVMs.Basis_AreaVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
	<wt:quote>@Localizer["Sys.DeleteConfirm"]</wt:quote>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:display field="Entity.Name" />
<wt:display field="Entity.AreaCode" />
<wt:display field="Entity.Lng" />
<wt:display field="Entity.Lat" />
<wt:display field="Entity.Remarks" />
<wt:display field="Entity.Area.Name" />
<wt:display field="Entity.Province.Name" />
<wt:display field="Entity.City.Name" />
<wt:display field="Entity.TenantCode" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="@Localizer["Sys.Delete"]"/>
        <wt:closebutton />
    </wt:row>
</wt:form>
