@model DustWarning.ViewModel._Basics.Basis_DeviceVMs.Basis_DeviceVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:textbox field="Entity.Name" />
<wt:textbox field="Entity.Code" />
<wt:combobox field="Entity.DTId" items="AllDTs"/>
<wt:combobox field="Entity.AreaId" items="AllAreas"/>
<wt:textbox field="Entity.Place" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
